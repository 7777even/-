#community{
  width: 100%;
  height: 100vh;
  background-color: #fafaf8;
}

.headercontainer{
  width:100%;
  height:200rpx;
  background-color: #1d975c;

}
.header{
  width:100%;
  height:230rpx;
  background-color: #1d975c;
  border-radius:35rpx;  
}
.menu{
  background-color: #fff;
  width:90%;
  height:210rpx;
float:right;
  margin-top:70rpx;
  margin-right: 38rpx;
  border-radius: 35rpx;
  box-shadow: 0px 0px 5px #adadad;
  display: flex;
  justify-content: space-around;
}
.menuitem2{
  margin-top: 35rpx;
}
#zixun{
  width:90rpx;
  height:90rpx;
}
.menu image{
  width:100rpx;
  height:100rpx;
  margin-top: 30rpx;
}

.menuitem1,.menuitem2,.menuitem3 view{
  font-size: 35rpx;
  text-align: center;
  margin-top: 3rpx;
}
.menuitem2 view{
  margin-top: 12rpx;
}
.new{
  width:100%;

margin-bottom:15rpx;
  margin-top: 80rpx;

}
.newtitle{
  background-color: #1d975c;
  width:180rpx;
  border-radius: 35rpx;
  color: white;
  font-size: 30rpx;
  text-align: center;
  height:50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
}
.newcard{
  width:85%;
  /* height:230rpx; */
  box-shadow: 0px 0px 5px #adadad;
margin: 0 auto;
border-radius: 35rpx;
display: flex;
margin-top: 30rpx;
padding-bottom: 15rpx;
}

.newarticle{
  flex:3.5;
  margin-left: 30rpx;
  margin-right:8rpx;
}
.articletitle{
  font-size: 30rpx;
  margin-top: 8rpx;
  font-weight: 600;
  overflow:hidden; 
  text-overflow:ellipsis; 
  display:-webkit-box; /* autoprefixer: off */ -webkit-box-orient:vertical; /* autoprefixer: on */ -webkit-line-clamp:2 ;
  text-align: center;

}
.artcile{
font-size: 28rpx;
color: #6e6e6e;
margin-top: 10rpx;
overflow:hidden; 
  text-overflow:ellipsis; 
  display:-webkit-box; /* autoprefixer: off */ -webkit-box-orient:vertical; /* autoprefixer: on */ -webkit-line-clamp:4
}


