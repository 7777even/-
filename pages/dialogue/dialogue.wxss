input {
  width: 65vw;
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}
.send{
  width: 10vw;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1vw 2vw;
  margin: 0 1.2vw 0 1.2vw;
  background-color: rgb(84, 204, 24);
  color: #fff;
  border-radius: 8rpx;
}
.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
  transform:translateY(0vh);
  transition-duration:100ms;
}
.inputRoom_1{
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
  transform:translateY(-39.7vh);
  transition-duration:0ms;
}
/* 关闭表情包 */
.bottom{
  position: fixed;
  z-index: 9;
  width: 100%;
  height: 100%;
  background-color: #f1f1f1;
}
.top{
  position: relative;
  z-index: 10;
}
.emoji{
  display: flex;
  padding: 10rpx 0 0 0 ;
  flex-wrap:wrap;
  position: relative;
  z-index: 10;
  /* position: relative;
  z-index: 99; */
}
.emoji_image{
width: 52rpx;
height: 52rpx;
display: flex;
justify-content: center;
align-items: center;
font-size: 50rpx;
padding: 10rpx 20.875rpx;
}
.emoji_delete{
  position: fixed ;
  z-index: 10;
  right: 23rpx;
  width: 95rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 90%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 28px 28px #f1f1f1;
}
.add{
  width: 15vw;
  height: 15vw;
  margin: 5vw 0 0  5vw;
  background-color: #fff;
